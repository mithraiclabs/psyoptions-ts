{
  "compilerOptions": {
      "declaration": true,
      "declarationDir": "dist",
      "declarationMap": true,
      "module": "es6",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      },
      "typeRoots": ["node_modules/@types"]
  },
  "include": [
      "src/**/*"
  ]
}
